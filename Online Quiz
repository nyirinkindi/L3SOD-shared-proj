<body>

<div id="quiz-container">
    <h2 id="question">Question will appear here</h2>
    <div id="options"></div>
    <button onclick="nextQuestion()">Next</button>
    <div id="result"></div>
</div>

<script>
    const questions = [
        { question: "1. What does HTML stand for?", options: ["Hyper Text Markup Language", "High Text Making Language", "Hyperlinks Text Mode List"], answer: 0 },
        { question: "2. CSS mainly controls:", options: ["Structure", "Styling", "Database"], answer: 1 },
        { question: "3. Which language runs in the browser?", options: ["Python", "JavaScript", "C++"], answer: 1 },
        { question: "4. What does JS stand for?", options: ["JavaSource", "JavaStyle", "JavaScript"], answer: 2 },
        { question: "5. Which tag creates a paragraph?", options: ["<p>", "<h1>", "<div>"], answer: 1 },
        { question: "6. CSS is used forâ€¦?", options: ["Styling web pages", "Creating servers", "Storing data"], answer: 0 },
        { question: "7. JavaScript runs in theâ€¦?", options: ["Browser", "Database", "OS Kernel"], answer: 0 }
    ];

    let index = 0;
    let score = 0;

    function loadQuiz() {
        document.getElementById("question").innerText = questions[index].question;
        const optionsDiv = document.getElementById("options");
        optionsDiv.innerHTML = "";

        questions[index].options.forEach((opt, i) => {
            optionsDiv.innerHTML += `
                <label class="option">
                    <input type="radio" name="option" value="${i}">
                    ${opt}
                </label>`;
        });
    }

    function nextQuestion() {
        const selected = document.querySelector('input[name="option"]:checked');
        if (!selected) {
            alert("Please choose an answer first, Bestie ðŸ’œ");
            return;
        }

        if (parseInt(selected.value) === questions[index].answer) {
            score++;
        }

        index++;

        if (index < questions.length) {
            loadQuiz();
        } else {
            document.getElementById("quiz-container").innerHTML =
                `<h2>ðŸŽ‰ You finished the quiz!</h2>
                 <p id="result">You scored ${score} out of ${questions.length} ðŸ’œ</p>`;
        }
    }

    loadQuiz();
</script>

</body>
</html>
